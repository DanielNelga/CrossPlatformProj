<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CrossPlatformProject"
             x:Class="CrossPlatformProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BgColor">Black</Color>

            <Color x:Key="TitleColor">Gold</Color>
            <Color x:Key="SubTextColor">Gold</Color>

            <Color x:Key="EntryBg">Gold</Color>
            <Color x:Key="EntryText">Black</Color>
            <Color x:Key="EntryPlaceholder">Black</Color>

            <Color x:Key="ButtonBg">#B9A7FF</Color>
            <Color x:Key="ButtonText">Black</Color>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
