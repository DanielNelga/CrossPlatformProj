<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CrossPlatformProject"
             x:Class="CrossPlatformProject.App">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="BgColor">#0F172A</Color>

            <Color x:Key="TitleColor">#E6D3A3</Color>
            <Color x:Key="SubTextColor">#E6D3A3</Color>

            <Color x:Key="EntryBg">#E6D3A3</Color>
            <Color x:Key="EntryText">Black</Color>
            <Color x:Key="EntryPlaceholder">Black</Color>

            <Color x:Key="ButtonBg">#E6D3A3</Color>
            <Color x:Key="ButtonText">Black</Color>

        </ResourceDictionary>
    </Application.Resources>

</Application>
