<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrossPlatformProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrossPlatformProject"
    Title="CrossPlatformProject">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Settings"
    ContentTemplate="{DataTemplate local:Settings}"
    Route="Settings" />

    <ShellContent
    Title="Favourites Page"
    ContentTemplate="{DataTemplate local:FavouritesPage}"
    Route="FavouritesPage" />


</Shell>
