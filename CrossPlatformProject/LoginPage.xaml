<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="24" Spacing="12" VerticalOptions="Center">
        <Label Text="Welcome" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

        <Button Text="Log in" Clicked="Login_Clicked" />
        <Button Text="Sign up" Clicked="Signup_Clicked" />

    </VerticalStackLayout>
</ContentPage>
