<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject.Settings"
             Title="Settings Menu">

    <Grid RowDefinitions="auto, *, auto" Padding="20">
        
        
        <VerticalStackLayout  Grid.Row="0"  Spacing="8" HorizontalOptions="Center">

        <Label 
            Text="Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="36"
            FontAttributes="Bold"/>
            
            
            <HorizontalStackLayout Padding="20" Spacing="8">
                <Label Text="Dark Mode" FontSize="30" VerticalOptions="Center"></Label>
                <Switch x:Name="DarkModeSwitch" Toggled="DarkMode_Toggled"></Switch>

            </HorizontalStackLayout>
        
        </VerticalStackLayout>
        
        <ContentView Grid.Row="1"></ContentView>

    <Grid Grid.Row="2"
      BackgroundColor="DarkGrey"
      Padding="10"
      ColumnDefinitions="*,*,*">

        <Button Text="Home"
            TextColor="White"
            Grid.Column="0"
                Clicked="BackToMainPage_Clicked"
                 HeightRequest="30"/>

        <Button Text="Favourites"
            TextColor="White"
            Grid.Column="1"
                 HeightRequest="30"
                 Clicked="Favourites_Clicked"/>

        <Button Text="Settings"
            TextColor="White"
            Grid.Column="2"
            Clicked="Settings_Clicked"
                HeightRequest="30"
                IsEnabled="False"/>

    </Grid>

    </Grid>
</ContentPage>