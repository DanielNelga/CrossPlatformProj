<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject.MainPage"
             Title="Movies">


    <Grid RowDefinitions="auto, *,auto " Padding="20">


       
           
                <SearchBar x:Name="SearchBox"
                           Placeholder="Search by name or by genre"
                           TextChanged="Search"
                           Grid.Row="0"/>

               <ListView x:Name="MoviesList" Grid.Row="1" ItemTapped="MoviesList_ItemTapped">
                     <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Emoji}"
                                      Detail="{Binding Title}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

          
       

        <Grid Grid.Row="2"
              BackgroundColor="DarkGrey"
              Padding="10"
              ColumnDefinitions="*,*,*">

            <Button Text="Home"
                    TextColor="White"
                    Grid.Column="0"/>

            <Button Text="Favourites"
                    TextColor="White"
                    Grid.Column="1"/>

            <Button Text="Settings"
                    TextColor="White"
                    Grid.Column="2"/>

        </Grid>

    </Grid>

</ContentPage>
