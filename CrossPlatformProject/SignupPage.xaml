<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject.SignupPage"
             Title="Sign Up">

    <VerticalStackLayout Padding="24" Spacing="12" VerticalOptions="Center">
        <Label Text="Create Account" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry x:Name="UsernameEntry" Placeholder="Username"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="ConfirmEntry" Placeholder="Confirm Password" IsPassword="True"/>

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>

        <Button Text="Create Account" Clicked="Create_Clicked"/>
        <Button Text="Back to Login" Clicked="Back_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
